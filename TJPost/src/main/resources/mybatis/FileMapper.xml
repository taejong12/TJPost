<mapper namespace="com.board.tjpost.dao.FileDAO">

    <insert id="insertBoardFile" parameterType="FileDTO" useGeneratedKeys="true">
        INSERT INTO COMMON_FILE (
            FILE_NAME,
            FILE_PATH,
            FILE_ORIGINALNAME,
            BOARD_ID
        ) VALUES (
            #{fileName},
            #{filePath},
            #{fileOriginalName},
            #{boardId}
        )
    </insert>
    
	<select id="selectFileListByBoardId" resultType="FileDTO">
		SELECT *
		FROM COMMON_FILE
		WHERE BOARD_ID = #{boardId}
	</select>
</mapper>
